<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simplemobiletools.calendar.pro">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TimeTab">
        <activity android:name=".views.events.ExamsActivity"></activity>
        <activity android:name=".views.events.ReminderActivity" />
        <activity android:name=".views.events.TaskActivity" />
        <activity android:name=".views.events.EventActivity" />
        <activity android:name=".views.activities.LessonDetailActivity" />
        <activity android:name=".views.lessons.ReminderActivity" />
        <activity android:name=".views.activities.EditClassActivity" />
        <activity android:name=".views.lessons.TimeTableActivity" />
        <activity android:name=".views.activities.AddClassActivity" />
        <activity android:name=".views.auth.SignInActivity" />
        <activity android:name=".views.auth.SignUpActivity" />
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.AppIntroActivity"
            android:label="My Custom AppIntro" />
        <activity android:name=".ClassOverviewActivity" />
    </application>

</manifest>